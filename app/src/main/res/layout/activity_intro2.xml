<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/plane" />

    <ImageView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:src="@drawable/garis2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="495dp"
        android:gravity="center"
        android:text="Pengiriman CV Online"
        android:textColor="#FFC107"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="550dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bulet2" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="600dp"
        android:text="Mempermudah pengiriman CV Pencari Kerja secara online"
        android:textAlignment="center"
        android:textSize="15dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="675dp"
        android:background="@drawable/masuk"
        android:text="Sign In"
        android:textColor="#000"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="675dp"
        android:background="@drawable/daftar"
        android:layout_marginRight="60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:text="Sign Up"
        android:textColor="#FDFDFD" />

</RelativeLayout>