<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/yellow_lighter">
        <ImageButton
            android:id="@+id/arrow_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrowleft"
            android:onClick="kembali"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info Aplikasi"
            android:layout_toRightOf="@id/arrow_left"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:textColor="@color/black"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:background="@drawable/background_rounded"
        android:layout_below="@+id/navbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:id="@+id/info_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/img_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/information_2"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_toRightOf="@+id/img_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Info Aplikasi"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:textColor="@color/black"/>
        </RelativeLayout>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_below="@+id/info_app"
            android:layout_width="300dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Aplikasi SOGUR diperuntukan bagi para pencari kerja yang mencari pekerjaan dengan mudah. Bagi perusahaan, aplikasi ini dapat mencari pekerja yang sesuai dengan kualifikasinya."
            android:textColor="@color/black"
            android:layout_marginLeft="17dp" />
    </RelativeLayout>



</RelativeLayout>