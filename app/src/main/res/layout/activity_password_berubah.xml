<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/open_pass"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/open_pass" />

    <TextView
        android:id="@+id/text_password_diubah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/open_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Password Telah Diubah"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/text_pesan_password_ubah"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_password_diubah"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Untuk memulai kembali Aplikasi Sogur silahkan klik Log in di bawah ini"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/backlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_pesan_password_ubah"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Kembali Log in."
        android:textColor="#F8CF05" />


</RelativeLayout>