<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthIntroDuaActivity">

    <ImageView
        android:id="@+id/gbr"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/plane" />

    <ImageView
        android:id="@+id/grs"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gbr"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/garis2" />

    <TextView
        android:id="@+id/penj_fitur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grs"
        android:gravity="center"
        android:text="Pengiriman CV Online"
        android:textColor="#FFC107"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/dots"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/penj_fitur"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="183dp"
        android:src="@drawable/bulet2" />

    <TextView
        android:id="@+id/penj_fitur2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dots"
        android:layout_marginLeft="50dp"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:text="Mempermudah pengiriman CV Pencari Kerja secara online"
        android:textAlignment="center"
        android:textSize="15dp" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/penj_fitur2"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="60dp"
        android:background="@drawable/masuk"
        android:text="Sign In"
        android:textColor="#000"
        android:theme="@style/btn_rounded_white" />

    <Button
        android:id="@+id/signUp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/penj_fitur2"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="60dp"
        android:background="@drawable/daftar"
        android:text="Sign Up"
        android:textColor="#FDFDFD"
        android:theme="@style/btn_black" />

</RelativeLayout>