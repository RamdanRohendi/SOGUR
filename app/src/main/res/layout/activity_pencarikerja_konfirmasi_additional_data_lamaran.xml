<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/done_check"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:src="@drawable/ic_done_circle" />

    <TextView
        android:id="@+id/text_data_lowongan"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/done_check"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Data Lowongan Berhasil !"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/pesan_text"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_data_lowongan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Untuk memulai kembali Aplikasi Sogur silahkan klik link dibawah ini."
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/pesan_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pesan_text"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="137dp"
        android:text="Kembali ke Dashboard"
        android:textColor="#FBB500" />

</RelativeLayout>