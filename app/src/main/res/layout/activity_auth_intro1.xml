<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AuthIntroSatuActivity">



    <TextView
        android:id="@+id/skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="30dp"
        android:text="Skip"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/gbr"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/speak" />

    <ImageView
        android:id="@+id/grs"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gbr"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/garis1"/>

    <TextView
        android:id="@+id/penj_fitur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/grs"
        android:gravity="center"
        android:text="Live Chat"
        android:textColor="#FFC107"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/dots"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/penj_fitur"
        android:layout_marginLeft="183dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/bulet1" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/dots"
        android:layout_marginLeft="50dp"
        android:gravity="center_horizontal"
        android:text="Mempermudah komunikasi antara pencari kerja dan perusahaan dengan fitur live chat"
        android:textAlignment="center"
        android:textSize="15dp" />
</RelativeLayout>