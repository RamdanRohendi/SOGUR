<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>
    <color name="black_trans">#4D000000</color>
    <color name="yellow_lighter">#FFC533</color>
    <color name="white_grey">#F6F6F6</color>
    <color name="yellow_darker">#99761F</color>
    <color name="grey">#C4C4C4</color>
    <color name="darkgrey">#3C3C3C</color>
    <style name="btn_black">
        <item name="colorPrimary">@color/black</item>
    </style>
    <style name="btn_yellow">
        <item name="colorPrimary">@color/yellow_lighter</item>
    </style>
    <style name="fab_yellow_lighter">
        <item name="colorSecondary">@color/yellow_lighter</item>
    </style>
    <style name="btn_grey">
        <item name="colorPrimary">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn_darkgrey">
        <item name="colorPrimary">@color/darkgrey</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn_rounded_white">
        <item name="android:background">@drawable/btn_rounded</item>
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="BorderedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/black</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>
    <style name="Plain">
        <item name="android:background">@color/white</item>
    </style>
</resources>



